{
  "name": "studybuddy-caps",
  "version": "1.0.0",
  "description": "AI-powered study assistant aligned with South African CAPS curriculum",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "npm run build-all",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "education",
    "study",
    "students",
    "learning",
    "caps",
    "south-africa",
    "pwa",
    "electron"
  ],
  "author": "StudyBuddy Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "astral-regex": "^2.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.studybuddy.caps",
    "productName": "StudyBuddy CAPS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!.git*",
      "!icons"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "icons/icon-512x512.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icons/icon-512x512.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "icon": "icons\\icon-512x512.svg"
  }
}
